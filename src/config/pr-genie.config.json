{
  "languages": {
    "typescript": {
      "extensions": [".ts", ".tsx"],
      "maxFileSize": 1000,
      "ignorePatterns": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.d.ts",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**"
      ],
      "checks": [
        "type-safety",
        "error-handling",
        "security",
        "code-style",
        "best-practices"
      ]
    },
    "javascript": {
      "extensions": [".js", ".jsx"],
      "maxFileSize": 1000,
      "ignorePatterns": [
        "**/*.test.js",
        "**/*.spec.js",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**"
      ],
      "checks": [
        "error-handling",
        "security",
        "code-style",
        "best-practices"
      ]
    },
    "python": {
      "extensions": [".py"],
      "maxFileSize": 2000,
      "ignorePatterns": [
        "**/*_test.py",
        "**/tests/**",
        "**/__pycache__/**",
        "**/venv/**",
        "**/.env/**"
      ],
      "checks": [
        "type-hints",
        "docstrings",
        "security",
        "code-style",
        "best-practices"
      ]
    },
    "java": {
      "extensions": [".java"],
      "maxFileSize": 2000,
      "ignorePatterns": [
        "**/*Test.java",
        "**/test/**",
        "**/target/**",
        "**/build/**"
      ],
      "checks": [
        "type-safety",
        "error-handling",
        "security",
        "code-style",
        "best-practices"
      ]
    }
  },
  "global": {
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/coverage/**",
      "**/.env/**",
      "**/venv/**",
      "**/__pycache__/**",
      "**/target/**"
    ],
    "maxFileSize": 5000,
    "defaultChecks": [
      "security",
      "best-practices",
      "code-style"
    ]
  }
} 